<style media="screen">
    .lined-up {
        margin-left: 20px;
    }
    li {
    height : 20px;
    width: 100px;
    margin-bottom: 5px;
    margin-right: 30px;
  }
  h1 {text-align: center;}
  .middle {
    margin-left: 40%;
    width: 20%;
    padding: 10px;
}
</style>

<h1>Eat-Da-Burger!</h1>

<div class="middle">
    <p>What would you like?</p>
    <input id="input-button" type="text"><br><br>
    <button onclick="buttonFunc()" class="btn btn-primary submit">Submit</button>
</div>

<ul>
    {{#each foods }}
    <li style="list-style-type:none; float: left" class="lined-up">{{@index}}:  {{this}}</li>
    <button style="float: left" style="display: inline" id={{this}} , onclick="devourButton(this)">Devour!</button>
    <br><br>
    {{/each}}
</ul>
<p style="margin-left: 70%">Eaten:</p>
<ul>
    {{#each eaten}}
    <li style="margin-left: 70%">{{this}}</li>
    {{/each}}
</ul>
<script>
    function devourButton(value) {
        console.log("Button: ", value.id);
        const buttonInput = {};
        buttonInput["string"] = value.id;
        var opts = {
            method: 'POST',
            body: JSON.stringify(buttonInput),
            headers: {
                "Content-Type": "application/json"
            }
        };
        fetch('/choices/devour', opts).then(function (response) {
            location.reload();      // essential to refresh the page
            return response.json();
        })
            .then(function (body) {
                let x = 1;
            });
    }

    function buttonFunc() {
        const buttonInput = {};
        buttonInput["string"] = document.getElementById("input-button").value;
        var opts = {
            method: 'POST',
            body: JSON.stringify(buttonInput),
            headers: {
                "Content-Type": "application/json"
            }
        };
        fetch('/choices/submit', opts).then(function (response) {
            location.reload();      // essential to refresh the page
            return response.json();
        })
            .then(function (body) {
                let x = 1;
            });
    }
</script>